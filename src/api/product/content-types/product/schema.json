{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "displayName": "Product",
    "singularName": "product",
    "pluralName": "products",
    "description": "Individual product entries for CubeCare"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "shortDescription": {
      "type": "text"
    },
    "description": {
      "type": "richtext"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "images": {
      "type": "media",
      "multiple": true
    },
    "specifications": {
      "type": "json"
    },
    "price": {
      "type": "decimal"
    },
    "sku": {
      "type": "string"
    },
    "available": {
      "type": "boolean",
      "default": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "order": {
      "type": "integer"
    },
    "variants": {
      "type": "component",
      "repeatable": true,
      "component": "variant.variant"
    },
    "metaTitle": {
      "type": "string"
    },
    "metaDescription": {
      "type": "text"
    }
  }
}
